{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mind-schema.org/schema/metas/event.meta.json",
  "title": "eventMeta",
  "description": "Metadata for a standardized event, referencing canonical event type.",
  "type": "object",
  "properties": {
    "definition": { "$ref": "https://mind-schema.org/schema/types/event.json" },
    "context": { "type": "string", "description": "Context or scenario for the event." },
    "tags": { "type": "array", "items": { "type": "string" }, "description": "Optional tags for classification." },
    "extensions": { "type": "object", "description": "Custom extension fields for future compatibility.", "additionalProperties": true }
  },
  "required": ["definition"],
  "additionalProperties": false
}

