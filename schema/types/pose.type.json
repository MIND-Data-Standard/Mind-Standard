{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mind-schema.org/schema/types/pose.json",
  "title": "pose",
  "description": "Complete 6-DOF pose containing position, Euler rotation, and quaternion rotation.",
  "type": "object",
  "properties": {
    "position": { "$ref": "https://mind-schema.org/schema/primitives/vector3.json" },
    "rotationEuler": { "$ref": "https://mind-schema.org/schema/primitives/vector3.json" },
    "rotationQuaternion": { "$ref": "https://mind-schema.org/schema/primitives/quaternion.json" }
  },
  "required": ["position", "rotationEuler", "rotationQuaternion"],
  "additionalProperties": false,
  "x-ai": {
    "dims": 10,
    "dtype": "float32",
    "order": [
      "position.x", "position.y", "position.z",
      "rotationEuler.x", "rotationEuler.y", "rotationEuler.z",
      "rotationQuaternion.x", "rotationQuaternion.y", "rotationQuaternion.z", "rotationQuaternion.w"
    ],
    "units": { "position": "metre", "rotationEuler": "radian", "rotationQuaternion": "dimensionless" },
    "embeddingHint": "pos+euler+unit-quaternion"
  }
}
